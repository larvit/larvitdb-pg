# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file and trailing whitespaces trimmed
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{ts,js,mjs,py,css,html,json}]
charset = utf-8

# Tab indentation (no size specified)
[*]
indent_style = tab

# Matches the exact files either package.json, .travis.yml or .eslintrc
[{package.json,.travis.yml,.eslintrc}]
indent_style = space
indent_size = 2
